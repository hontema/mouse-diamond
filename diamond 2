void setup() {
  size(500, 500);
}

void draw() {
  background(0);
  fill(255, 0, 0);
  triangle(0, 0, width, 0, mouseX, mouseY);
  fill(0, 255, 0);
  triangle(0, 0, 0, height, mouseX, mouseY);
  fill(0, 0, 255);
  triangle(width, 0, width, height, mouseX, mouseY);
  fill(255, 0, 255);
  triangle(0, height, width, height, mouseX, mouseY);
}
